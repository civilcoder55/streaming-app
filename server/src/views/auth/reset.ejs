<%- include('../layout/auth/header.ejs') %>
  <div class="sign section--bg" data-bg="/img/section/section.jpg">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="sign__content">
            <!-- authorization form -->
            <form class="sign__form" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <a href="/" class="sign__logo">
                <img src="/img/logo.svg" alt="" />
              </a>

              <div class="sign__group">
                <input type="password" class="sign__input" placeholder="New Password" name="password" required />
              </div>

              <div class="sign__group">
                <input type="password" class="sign__input" placeholder="Confirm Password" name="password2" required />
              </div>

              <button class="sign__btn" type="submit">Reset password now</button>
            </form>
            <!-- end authorization form -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../layout/auth/footer.ejs') %>