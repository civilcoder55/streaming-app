<%- include('../../layout/admin/header.ejs' , {title:'Movies List'}) %>
<!-- main content -->
<style>
    th{
        text-align: center;
    }
    td div.main__table-text {
        display: block !important;
        margin: 0 auto;
        text-align: center
    }
</style>
<main class="main">
    <div class="container-fluid">
        <div class="row">
            <!-- main title -->
            <div class="col-12">
                <div class="main__title">
                    <h2>Movies</h2>

                    <span class="main__title-stat"><%= paginator.count %> Total</span>

                    <div class="main__title-wrap">
                        <!-- filter sort -->
                        <div class="filter" id="filter__sort">
                            <span class="filter__item-label">Sort by:</span>

                            <div class="filter__item-btn dropdown-toggle" role="navigation" id="filter-sort" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <input type="button" value="Date created">
                                <span></span>
                            </div>

                            <ul class="filter__item-menu dropdown-menu scrollbar-dropdown" aria-labelledby="filter-sort">
                                <li>Date created</li>
                                <li>Rating</li>
                                <li>Views</li>
                            </ul>
                        </div>
                        <!-- end filter sort -->

                        <!-- search -->
                        <form action="#" class="main__title-form">
                            <input type="text" placeholder="Find movie / tv series..">
                            <button type="button">
                                <i class="icon ion-ios-search"></i>
                            </button>
                        </form>
                        <!-- end search -->
                    </div>
                </div>
            </div>
            <!-- end main title -->

            <!-- users -->
            <div class="col-12">
                <div class="main__table-wrap">
                    <table class="main__table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>TITLE</th>
                                <th>RATING</th>
                                <th>CRAETED DATE</th>
                                <th>Queued</th>
                                <th>Downloaded</th>
                                <th>Transcoded</th>
                                <th style="text-align: unset;">ACTIONS</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% paginator.records.forEach((movie)=>{ %>
                            <tr>
                                <td>
                                    <div class="main__table-text"><%= movie.id %></div>
                                </td>
                                <td>
                                    <div class="main__table-text"><%= movie.title %></div>
                                </td>
                                <td>
                                    <div class="main__table-text main__table-text--rate"><i class="icon ion-ios-star"></i> <%= movie.rate %></div>
                                </td>
                                <td>
                                    <div class="main__table-text"><%= movie.createdAt.toLocaleString()  %></div>
                                </td>
                                <td>
                                    <div class="main__table-text"><% if(movie.queued){ %><i class="icon ion-ios-checkmark-circle"  style="margin: 0 auto;"></i> <% }else{ %> <i class="icon ion-ios-close-circle"  style="margin: 0 auto;"></i> <% } %></div>
                                </td>
                                <td>
                                    <div class="main__table-text"><% if(movie.downloaded){ %><i class="icon ion-ios-checkmark-circle"  style="margin: 0 auto;"></i> <% }else{ %> <i class="icon ion-ios-close-circle"  style="margin: 0 auto;"></i> <% } %></div>
                                </td>
                                <td>
                                    <div class="main__table-text"><% if(movie.transcoded){ %><i class="icon ion-ios-checkmark-circle"  style="margin: 0 auto;"></i> <% }else{ %> <i class="icon ion-ios-close-circle"  style="margin: 0 auto;"></i> <% } %></div>
                                </td>
                                <td>
                                    <div class="main__table-btns">
                                        <a href="/admin/movies/edit/<%= movie.id %>" class="main__table-btn main__table-btn--edit">
                                            <i class="icon ion-ios-create"></i>
                                        </a>
                                        <a href="#modal-delete" class="main__table-btn main__table-btn--delete open-modal" link="movies/delete/<%= movie.id %>" onclick="function setAction(){document.querySelector('.delete').action =getAttribute('link')}setAction()">
                                            <i class="icon ion-ios-trash"></i>
                                        </a>
                                        <a href="#modal-download" class="main__table-btn main__table-btn--banned open-modal" link="movies/download/<%= movie.id %>" onclick="function setAction(){document.querySelector('.download').action =getAttribute('link')}setAction()">
                                            <i class="icon ion-ios-cloud-download"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                           
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end users -->
            <% if(paginator.hasOther){ %>
            <!-- paginator -->
            <div class="col-12">
                <div class="paginator-wrap">
                    <span><%= ((paginator.page -1) * 10)+ movies.length %> from <%= count %></span>

                    <ul class="paginator">
						<% if(paginator.hasPerv){ %>
						<li class="paginator__item paginator__item--prev">
							<a href="?page=<%= (paginator.page - 1) %>"><i class="icon ion-ios-arrow-back"></i></a>
						</li>
						<% } %>


						<% if(paginator.pages <= 4 ){ %>
						<% for(let i = 1 ; i <= paginator.pages ; i++){ %>

						<% if(paginator.page == i ){ %>
						<li class="paginator__item paginator__item--active"><a href="?page=<%= i %>"><%= i %></a></li>
						<% }else{ %>
						<li class="paginator__item"><a href="?page=<%= i %>"><%= i %></a></li>
						<% } %>
						<% } %>

						<% }else{ %>
							<% if(paginator.hasPerv ){ %>
								<% if(paginator.page >= 3 ){ %>
							<li class="paginator__item"><a href="#">..</a></li>
							<% } %>
							<li class="paginator__item"><a href="?page=<%= (paginator.page -1) %>"><%= (paginator.page -1) %></a></li>
							<% } %>
							<li class="paginator__item paginator__item--active"><a href="?page=<%= (paginator.page ) %>"><%= (paginator.page ) %></a></li>
							<% if(paginator.hasNext ){ %>
							<li class="paginator__item"><a href="?page=<%= (paginator.page + 1) %>"><%= (paginator.page + 1) %></a></li>
							<% if(paginator.page != paginator.pages - 1 ){ %>
								<li class="paginator__item"><a href="#">..</a></li>
								<% } %>
							<% } %>
				
							


						
						<% } %>
						<% if(paginator.hasNext){ %>
						<li class="paginator__item paginator__item--next">
							<a href="?page=<%= (paginator.page + 1) %>"><i class="icon ion-ios-arrow-forward"></i></a>
							<% } %>
						</li>
					</ul>
                </div>
            </div>
            <!-- end paginator -->
            <% } %>
        </div>
    </div>
</main>
<!-- end main content -->

<!-- modal delete -->
<div id="modal-delete" class="zoom-anim-dialog mfp-hide modal">
    <h6 class="modal__title">Item delete</h6>

    <p class="modal__text">Are you sure to permanently delete this item?</p>

    <div class="modal__btns">
        <form action="#" class="delete" id="delete" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
     </form>
    <button class="modal__btn modal__btn--apply" type="submit" form="delete">Delete</button>
        <button class="modal__btn modal__btn--dismiss" type="button">Dismiss</button>
    </div>
</div>
<!-- end modal delete -->


<!-- modal download -->
<div id="modal-download" class="zoom-anim-dialog mfp-hide modal">
    <h6 class="modal__title">Item download</h6>
    <form action="#" class="download" id="download" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input class="form__input" type="text" name="torrent" placeholder="Torrent Link">
    </form>
    <div class="modal__btns">
        <button class="modal__btn modal__btn--apply" type="submit" form="download">Download</button>
        <button class="modal__btn modal__btn--dismiss" type="button">Dismiss</button>
    </div>
</div>
<!-- end modal delete -->

<!-- JS -->
<script src="/js/jquery-3.4.1.min.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/jquery.magnific-popup.min.js"></script>
<script src="/js/jquery.mousewheel.min.js"></script>
<script src="/js/jquery.mCustomScrollbar.min.js"></script>
<script src="/js/select2.min.js"></script>
<script src="/js/admin.js"></script>
</body>
</html>